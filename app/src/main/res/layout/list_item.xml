<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/order_id_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="order_id:"/>
    <TextView
        android:id="@+id/from_to_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="from   to"/>
    <TextView
        android:id="@+id/phone_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="courier phone: "
        android:textSize="20dp"
        android:layout_below="@id/from_to_textView"/>

    <TextView
        android:id="@+id/time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="expected time: "
        android:layout_below="@id/phone_textView"/>

    <TextView
        android:id="@+id/description_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="discription"
        android:layout_below="@id/time_textView"/>
</LinearLayout>
    <CheckBox
        android:id="@+id/status_checkBox"
        android:text="order status"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>


</RelativeLayout>